#define ZMK_POINTING_DEFAULT_MOVE_VAL 1500  // default: 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // default: 10

#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {
    macros {
        tmux_n1: tmux_n1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp N1>;
        };

        tmux_n2: tmux_n2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp N2>;
        };

        tmux_n3: tmux_n3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp N3>;
        };

        tmux_n4: tmux_n4 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp N4>;
        };

        vim_write: vim_write {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp ESC &kp COLON &kp W &kp ENTER>;
        };

        gg: gg {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp G>;
        };

        move_line_up: move_line_up {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp V &kp LS(U) &kp ESCAPE>;
            label = "MOVE_LINE_UP";
        };

        move_line_down: move_line_down {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp V &kp LS(D) &kp ESCAPE>;
            label = "MOVE_LINE_DOWN";
        };

        vim_wqa: vim_wqa {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp ESC &kp COLON &kp W &kp Q &kp A &kp ENTER>;
            label = "VIM_WQA";
        };

        tmux_zoom: tmux_zoom {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A) &kp Z>;
            label = "TMUX_ZOOM";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default {
            bindings = <
&kp Q  &kp W  &kp E         &kp R         &kp T   &kp Y     &kp U      &kp I      &kp O    &kp P
&kp A  &kp S  &kp D         &kp F         &kp G   &kp H     &kp J      &kp K      &kp L    &kp SEMI
&kp Z  &kp X  &kp C         &kp V         &kp B   &kp N     &kp M      &kp COMMA  &kp DOT  &kp FSLH
              &kp NUMBER_1  &kp NUMBER_2                    &kp SPACE  &kp BSPC
              &kp NUMBER_3  &kp NUMBER_4  &kp N5  &kp LALT  &kp LCTRL  &kp TAB
                            &kp NUMBER_6  &kp N7  &kp RALT  &kp RGUI
            >;
        };

        arrow {
            bindings = <
&kp N1    &kp N2    &kp N3    &kp N4    &kp N5      &kp N6    &kp N7    &kp N8  &kp N9     &kp N0
&tmux_n1  &tmux_n2  &tmux_n3  &tmux_n4  &tmux_zoom  &kp LEFT  &kp DOWN  &kp UP  &kp RIGHT  &kp APOS
&kp F1    &kp F2    &kp F3    &kp F4    &kp F5      &kp F6    &kp F7    &kp F8  &kp F9     &kp F10
                    &mo 3     &trans                          &trans    &trans
                    &trans    &trans    &trans      &trans    &trans    &trans
                              &trans    &trans      &trans    &trans
            >;
        };

        symbol {
            bindings = <
&kp EXCL    &kp AT     &kp HASH  &kp DLLR  &kp PRCNT  &kp CARET  &kp AMPS   &kp ASTRK  &kp LPAR  &kp RPAR
&kp GRAVE   &kp TILDE  &kp LBKT  &kp RBKT  &kp PIPE   &kp MINUS  &kp EQUAL  &kp LBRC   &kp RBRC  &kp BSLH
&vim_write  &vim_wqa   &gg       &trans    &trans     &kp UNDER  &kp PLUS   &kp LT     &kp GT    &kp QMARK
                       &trans    &trans                          &trans     &trans
                       &trans    &mo 3     &trans     &trans     &trans     &trans
                                 &trans    &trans     &trans     &trans
            >;
        };

        adjust {
            bindings = <
&bt BT_CLR    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &kp C_VOL_DN  &kp C_VOL_UP  &kp C_BRI_DN  &kp C_BRI_UP  &bt BT_CLR_ALL
&out OUT_BLE  &out OUT_USB  &trans        &trans        &trans        &trans        &trans        &trans        &trans        &trans
&soft_off     &trans        &trans        &trans        &trans        &trans        &trans        &trans        &trans        &soft_off
                            &trans        &trans                                    &trans        &trans
                            &trans        &trans        &trans        &trans        &trans        &trans
                                          &trans        &trans        &trans        &trans
            >;
        };
    };
};
